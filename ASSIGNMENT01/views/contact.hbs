<!-- Contact Section -->
<section class="section-contact py-5 abstract-bg-gradient">
  <div class="container">
    <h1 class="text-center mb-4 text-white fw-bold">
      <i class="fas fa-envelope-open-text"></i> Contact Me
    </h1>

    <form action="/contact" method="POST" class="row g-3 form-contact" onsubmit="showConfirmation(event)">
      <div class="col-md-6">
        <label for="name" class="form-label text-white">Full Name</label>
        <input type="text" class="form-control input-abstract" id="name" name="name" required placeholder="Enter your full name">
      </div>
      <div class="col-md-6">
        <label for="email" class="form-label text-white">Email Address</label>
        <input type="email" class="form-control input-abstract" id="email" name="email" required placeholder="Enter your email">
      </div>
      <div class="col-12">
        <label for="message" class="form-label text-white">Message</label>
        <textarea class="form-control input-abstract" id="message" name="message" rows="6" required placeholder="Enter your message"></textarea>
      </div>
      <div class="col-12 text-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg abstract-btn">Submit</button>
      </div>
    </form>
  </div>
</section>

<!-- JavaScript to show confirmation pop-up -->
<script>
  function showConfirmation(event) {
    event.preventDefault(); // Prevent form from submitting automatically
    alert('Thank you! Your message has been submitted.');
    // Optionally, submit the form after showing the message
    event.target.submit();
  }
</script>